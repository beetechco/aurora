{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./lib",
    "module": "es6",
    "noImplicitAny": true,
    "outDir": "./lib",
    "target": "es5",
    "jsx": "react",
    "moduleResolution": "node",
    "strict": false,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "example",
    "lib",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts",
    "src/setupTests.ts"
  ]
}